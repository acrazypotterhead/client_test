WindowManager:
    FirstWindow:
    SecondWindow:
        
<RoundedToggleButton@ToggleButton>:
    background_color: 0, 0, 0, 0  # Cache l'arrière-plan par défaut
    color: 1, 1, 1, 1  # Couleur du texte
    size: self.size

    canvas.before:
        Color:
            rgba: 79/255, 79/255, 79/255, 1  
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]  # Coins arrondis

<RoundedButton@Button>:
    background_color: 0, 0, 0, 0  # Cache l'arrière-plan par défaut
    #background_normal: 'images/gris foncé.png'  # Image de fond
    #background_down: 'images/gris clair.png'  # Image de fond lorsque le bouton est enfoncé
    color: 1, 1, 1, 1  # Couleur du texte
    size: self.size

    canvas.before:
        Color:
            rgba: 79/255, 79/255, 79/255, 1  
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]  # Coins arrondis

<FirstWindow>:
    name: 'first'
    GridLayout:
        cols: 1
        padding: 50
        spacing: 30
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: 10
            spacing: 10
            Button:
                id: label_ip
                text: 'Enter server IP :'

            TextInput:
                id: ip
                multiline: False
                text: " 192.168.183.27"

            Label:
               
                text: 'Status :'

            Button:
                id: status
                text: "Disconnected"
           
    
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: 10
            spacing: 10

            RoundedButton:
                text: "Connect to server"
                on_press: root.set_serv_ip()


            RoundedButton:
                id: button_gyro
                text: 'Start Gyroscope'
                on_press: root.toggle_accelerometer()


        RoundedButton:
            text: "toggle accelerometer"
            on_press: root.ids.Jauge1.do_toggle()
            size_hint: 1, 0.1
            
        
        GridLayout:
            size: root.size
            pos: root.pos
            cols: 3
            rows: 1
            row_default_height: 600  # Hauteur par défaut des lignes
            col_default_width: 600  # Largeur par défaut des colonnes
            row_force_default: True  # Forcer la hauteur par défaut des lignes
            col_force_default: True  # Forcer la largeur par défaut des colonnes
            Jauge:
                id: Jauge1
                size_hint: 1,1
                choice: "x"
                min_value: -30
                max_value: 30
            
            Jauge:
                id: Jauge2
                size_hint: 1,1
                choice: "x"
                min_value: -30
                max_value: 30
            Jauge:
                id: Jauge3
                size_hint: 1,1
                choice: "x"
                min_value: -30
                max_value: 30
        
        RoundedButton:
            text: 'go to Second Window'
            size_hint: 1, 0.1
           
            
            
            on_press:
                root.manager.current = 'second'
                root.manager.transition.direction = 'left'

<SecondWindow>:
    name: 'second'
    GridLayout:
        cols: 1
        Label: 
            text: "Second Window"

        RoundedButton:
            text: "toogle accelerometer"
            on_press: root.ids.Jauge1.do_toggle()
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            padding: 10
            Jauge:
                id: Jauge1
                size_hint: 1,1
                choice: "x"
                min_value: -30
                max_value: 30
            
            Jauge:
                id: Jauge2
                size_hint: 1,1
                choice: "x"
                min_value: -30
                max_value: 30
        Jauge:
            id: Jauge3
            size_hint: 1,1
            choice: "x"
            min_value: -30
            max_value: 30



        RoundedButton:
            text: "Go to First Window"
            on_press: 
                root.manager.current = 'first'
                root.manager.transition.direction = 'right'
    
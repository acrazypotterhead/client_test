WindowManager:
    FirstWindow:

<FirstWindow>:
    name: 'first'
    GridLayout:
        cols: 1
        padding: 50
        spacing: 30
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: label_ip
            text: 'Enter server IP :'
            size_hint: 1, 0.4
    
        
        TextInput:
            id: ip
            multiline: False
            size_hint: 1, 0.4

        Button:
            text: "Connect to server"
            on_press: root.set_serv_ip()
            size_hint: 1, 0.2


        Button:
            id: button_gyro
            text: 'Gyroscope'
            on_press: root.toggle_accelerometer()
            size_hint: 1, 0.2


        Label:
            id: data
            text: 'Data'
            size_hint: 1, 0.4
        Button:
            text: 'go to Second Window'
            size_hint: 1, 0.2
           
            
            
            on_press:
                root.manager.current = 'second'
                root.manager.transition.direction = 'left'